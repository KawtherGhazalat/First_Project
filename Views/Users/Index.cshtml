@{
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}
<style>
    .card {
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-img-top {
        height: 200px;
        object-fit: cover;
    }

    .card-title {
        font-size: 1.2rem;
    }

    .card-footer {
        background-color: #f8f9fa;
        border-top: 1px solid #dee2e6;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .recipe-image {
        width: 100%;
        height: 300px;
        object-fit: cover;
    }

    .modal {
        z-index: 1050;
    }

    .modal-backdrop {
        z-index: 1040;
    }

</style>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">

<section class="hero-area">
    <div class="hero-slides owl-carousel">
        <div class="single-hero-slide bg-img custome-style-one">
            <div class="container h-100">
                <div class="row h-100 align-items-center">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    </div>
                </div>
            </div>
        </div>

        <div class="single-hero-slide bg-img custome-style-two">
            <div class="container h-100">
                <div class="row h-100 align-items-center">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    </div>
                </div>
            </div>
        </div>

        <div class="single-hero-slide bg-img custome-style-three">
            <div class="container h-100">
                <div class="row h-100 align-items-center">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="top-catagory-area section-padding-80-0">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-heading">
                    <h3>The best Categories</h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <form id="searchForm" asp-action="Index" method="get" class="form-inline mb-4">
                    <div class="form-group col-8">
                        <input type="text" name="categoryKeyword" class="form-control w-100" placeholder="Search Categories" />
                    </div>
                    <div class="form-group col-4">
                        <button type="submit" class="btn btn-primary btn-block">Search</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="container">
            <div class="row">
                @foreach (var item in ViewBag.Categories)
                {
                    <div class="col-12 col-sm-6 col-lg-4 mb-4">
                        <div class="card">
                            <img src="@Url.Content("~/Images/" + item.ImagePath)" class="card-img-top" alt="Category Image">
                            <div class="card-body">
                                <h5 class="card-title">@item.CategoryName</h5>
                                <a asp-controller="Home" asp-action="ViewCategoryRecipes" asp-route-id="@item.ID" class="btn btn-primary btn-block">View Recipes</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<section class="best-receipe-area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-heading">
                    <h3>The best Receipies</h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <form id="searchForm" asp-action="Index" method="get" class="form-inline mb-4">
                    <div class="form-group col-8">
                        <input type="text" name="recipeKeyword" class="form-control w-100" placeholder="Search Recipes" />
                    </div>
                    <div class="form-group col-4">
                        <button type="submit" class="btn btn-primary btn-block">Search</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="row">
            @foreach (var item in ViewBag.Recipes)
            {
                <div class="col-12 col-sm-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <img src="@Url.Content("~/Images/" + item.Recipe.Image)" class="card-img-top" alt="Recipe Image">
                        <div class="card-body">
                            <h5 class="card-title">@item.Recipe.Title</h5>
                            <a asp-controller="Home" asp-action="AddToCart" asp-route-id="@item.Recipe.ID" class="btn btn-primary btn-block">Add to Cart</a>
                        </div>
                        <div class="card-footer">
                            <button type="button" class="btn btn-secondary btn-block testimonial-btn" data-toggle="modal" data-target="#testimonialModal" data-recipe-id="@item.Recipe.ID" data-recipe-title="@item.Recipe.Title">Add Testimonial</button>
                            <button type="button" class="btn btn-info btn-block view-testimonials-btn" data-toggle="modal" data-target="#viewTestimonialsModal" data-recipe-id="@item.Recipe.ID">View Testimonials</button>
                        </div>
                    </div>
                </div>
            }
        </div>
</section>

<div class="modal fade" id="viewTestimonialsModal" tabindex="-1" role="dialog" aria-labelledby="viewTestimonialsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewTestimonialsModalLabel">View testimonials</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Content</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody id="testimonialsTableBody">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="testimonialModal" tabindex="-1" role="dialog" aria-labelledby="testimonialModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="testimonialModalLabel">Add Testimonial for <span id="recipeTitle"></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="testimonialForm" asp-controller="Recipes" asp-action="SubmitTestimonial" method="post">
                    <div class="form-group">
                        <label for="testimonialContent">Content</label>
                        <textarea class="form-control" id="testimonialContent" name="Content" rows="3" required></textarea>
                    </div>
                    <input type="hidden" id="recipeId" name="RecipeId" />
                    <button type="submit" class="btn btn-primary">Submit Testimonial</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Bootstrap JS -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>

<script>
    $(document).ready(function () {
        $('.testimonial-btn').click(function () {
            var recipeId = $(this).data('recipe-id');
            var recipeTitle = $(this).data('recipe-title');

            $('#recipeId').val(recipeId);
            $('#recipeTitle').text(recipeTitle);
        });

        $('.view-testimonials-btn').click(function () {
            var recipeId = $(this).data('recipe-id');

            // Clear previous testimonials
            $('#testimonialsTableBody').empty();

            $.ajax({
                url: '@Url.Action("GetTestimonials", "Users")',
                type: 'GET',
                data: { recipeId: recipeId },
                success: function (data) {
                    if (data.length > 0) {
                        data.forEach(function (testimonial) {
                            $('#testimonialsTableBody').append(
                                '<tr>' +
                                '<td>' + testimonial.content + '</td>' +
                                '<td>' + new Date(testimonial.dateposted).toLocaleDateString() + '</td>' +
                                '</tr>'
                            );
                        });
                    } else {
                        $('#testimonialsTableBody').append('<tr><td colspan="3" class="text-center">No testimonials available.</td></tr>');
                    }
                },
                error: function () {
                    alert('Error loading testimonials.');
                }
            });

            // Show the modal
            $('#viewTestimonialsModal').modal('show');
        });
    });

</script>
