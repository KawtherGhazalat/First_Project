@model IEnumerable<First_Project.Models.Order>

@{
    ViewData["Title"] = "GetAllOrders";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<h1>My Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Items)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderRequester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isPaid)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal_@item.Id">Show Menu Items</button>

                    <div class="modal fade" id="myModal_@item.Id" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header" style="display: block;">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Order @item.OrderNumber</h4>
                                </div>
                                <div class="modal-body">
                                    <table class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Price</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var menuItem in item.MenuItems)
                                            {
                                                <tr>
                                                    <td>@menuItem.Name </td>
                                                    <td>@menuItem.Price </td>
                                                </tr>
                                            }

                                        </tbody>

                                    </table>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                </div>
                            </div>

                        </div>
                    </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice) JOD
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderRequester)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isPaid)
            </td>
            <td>
                    @if (!item.isPaid)
                    {
                        <a class="btn btn-primary" href="@Url.Action("Pay", "Payment")">
                            PAY NOW
                        </a>
                    }
                    else
                    {
                        <p> Paid </p>
                    }
                </td>
        </tr>
}
    </tbody>
</table>
