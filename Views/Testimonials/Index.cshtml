@model IEnumerable<First_Project.Models.Testimonial>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Testimonial</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dateposted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dateposted)
            </td>
            <td>
                    <a class="btn btn-danger" href="@Url.Action("RejectTestimonual", new {testimonialId = item.ID})">
                        Reject
                    </a>

                    <a class="btn btn-primary" href="@Url.Action("AcceptTestimonual", new {testimonialId = item.ID})">
                        Accept
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
