<!DOCTYPE html>
<html lang="en">

<head>
    <title>@ViewData["Title"] - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <!-- Title -->
    <title>Delicious - Food Blog Template | Home</title>

    <!-- Favicon -->
    <link rel="icon" href="~/Home/img/core-img/favicon.ico">

    <!-- Core Stylesheet -->
    <link rel="stylesheet" href="~/Home/style.css">
    <link rel="stylesheet" href="~/Home/css/CustomStyle.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Delicious - Food Blog Template | Home</title>
    <link rel="icon" href="~/Home/img/core-img/favicon.ico">
    <link rel="stylesheet" href="~/Home/style.css">
    <link rel="stylesheet" href="~/Home/css/CustomStyle.css">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .single-top-catagory img {
            width: 100%;
            height: 300px;
            object-fit: cover;
        }
    </style>
</head>

<body>
    <div id="preloader">
        <i class="circle-preloader"></i>
        <img src="~/Home/img/core-img/salad.png" alt="">
    </div>
    <div class="search-wrapper">
        <div class="close-btn"><i class="fa fa-times" aria-hidden="true"></i></div>
    </div>
    <header class="header-area">

        <div class="delicious-main-menu">
            <div class="classy-nav-container breakpoint-off">
                <div class="container">
                    <nav class="classy-navbar justify-content-between" id="deliciousNav">

                        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                            <img src="~/Home/img/core-img/logo.png" alt="">
                        </a>

                        <div class="classy-navbar-toggler">
                            <span class="navbarToggler"><span></span><span></span><span></span></span>
                        </div>

                        <div class="classy-menu">

                            <div class="classycloseIcon">
                                <div class="cross-wrap"><span class="top"></span><span class="bottom"></span></div>
                            </div>
                            <div class="classynav">
                                <ul>
                                    <li class="active"><a href="@Url.Action("Index","Home")">Home</a></li>
                                    <li><a href="@Url.Action("ContactUs","Pages", new {layout = "_HomeLayout.cshtml"})">Contact us</a></li>
                                    <li><a href="@Url.Action("AboutUs","Pages", new {layout = "_HomeLayout.cshtml"})">About us</a></li>

                                </ul>
                            </div>
                        </div>
                        <ul>
                            <li class="nav-item d-flex align-items-center">
                                <a class="nav-link text-body font-weight-bold px-0" asp-action="Login" asp-controller="LoginAndRegister">
                                    <i class="fa fa-user me-sm-1"></i>

                                    <span class="d-sm-inline d-none">Log In</span>

                                </a>
                            </li>
                        </ul>

                    </nav>
                </div>
            </div>
        </div>
    </header>

    @RenderBody()

    <footer class="footer-area">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-12 h-100 d-flex flex-wrap align-items-center justify-content-between">
                    <div class="footer-social-info text-right">
                        <a href="#"><i class="fa fa-pinterest" aria-hidden="true"></i></a>
                        <a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                        <a href="#"><i class="fa fa-linkedin" aria-hidden="true"></i></a>
                    </div>
                    <div class="footer-logo">
                        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                            <img src="~/Home/img/core-img/logo.png" alt="">
                        </a>
                    </div>
                    <p>
                        Copyright &copy;<script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="fa fa-heart-o" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/Home/js/jquery/jquery-2.2.4.min.js"></script>
    <script src="~/Home/js/bootstrap/popper.min.js"></script>
    <script src="~/Home/js/bootstrap/bootstrap.min.js"></script>
    <script src="~/Home/js/plugins/plugins.js"></script>
    <script src="~/Home/js/active.js"></script>
</body>
</html>        